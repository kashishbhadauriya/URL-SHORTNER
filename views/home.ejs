<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>URL Shortener</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background: #0d1117;
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      overflow-x: hidden;
    }

    canvas {
      position: fixed;
      top: 0;
      left: 0;
      z-index: -1;
    }

    h1 {
      margin-top: 60px;
      font-size: 2rem;
      color: #58a6ff;
    }

    form {
      background: #161b22;
      padding: 20px;
      border-radius: 10px;
      margin-top: 30px;
      width: 90%;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      gap: 12px;
      box-shadow: 0 0 10px rgba(88,166,255,0.1);
    }

    label {
      font-weight: 600;
    }

    input[type="text"] {
      padding: 10px;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
    }

    button {
      padding: 10px;
      background: #238636;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    button:hover {
      background: #2ea043;
    }

    h2 {
      margin-top: 40px;
      font-size: 1.2rem;
      color: #c9d1d9;
    }

    ul {
      list-style: none;
      padding: 0;
      width: 90%;
      max-width: 600px;
    }

    li {
      background: #161b22;
      padding: 10px 15px;
      border-radius: 8px;
      margin-bottom: 10px;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    li a {
      color: #58a6ff;
      text-decoration: none;
      font-weight: 600;
    }

    li a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <canvas id="background"></canvas>

  <h1>Short URL Generator ðŸ”—</h1>
  <form method="POST" action="/url">
    <label>Enter Your Original URL</label>
    <input type="text" name="url" placeholder="https://example.com" required />
    <button type="submit">Generate</button>
  </form>

  <h2>All URLs:</h2>
  <ul>
    <% urls.forEach(url => { %>
      <li>
        <a href="/<%= url.shortId %>"><%= url.shortId %></a> â†’
        <%= url.redirectURL %> |
        Visited: <%= url.visitHistory.length %> times
      </li>
    <% }) %>
  </ul>

  <!-- Simple animated background script -->
  <script>
    const canvas = document.getElementById("background");
    const ctx = canvas.getContext("2d");

    let width, height;
    function resize() {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
    }
    window.addEventListener("resize", resize);
    resize();

    const dots = Array.from({length: 50}, () => ({
      x: Math.random() * width,
      y: Math.random() * height,
      vx: (Math.random() - 0.5) * 1,
      vy: (Math.random() - 0.5) * 1,
    }));

    function draw() {
      ctx.clearRect(0, 0, width, height);
      for (let i = 0; i < dots.length; i++) {
        let a = dots[i];
        a.x += a.vx;
        a.y += a.vy;

        if (a.x < 0 || a.x > width) a.vx *= -1;
        if (a.y < 0 || a.y > height) a.vy *= -1;

        ctx.beginPath();
        ctx.arc(a.x, a.y, 2, 0, Math.PI * 2);
        ctx.fillStyle = "#58a6ff";
        ctx.fill();

        for (let j = i + 1; j < dots.length; j++) {
          let b = dots[j];
          const dist = Math.hypot(a.x - b.x, a.y - b.y);
          if (dist < 120) {
            ctx.beginPath();
            ctx.moveTo(a.x, a.y);
            ctx.lineTo(b.x, b.y);
            ctx.strokeStyle = "rgba(88, 166, 255, 0.1)";
            ctx.stroke();
          }
        }
      }
      requestAnimationFrame(draw);
    }

    draw();
  </script>
</body>
</html>
